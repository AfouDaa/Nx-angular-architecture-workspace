{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@org/auth": ["libs/auth/src/index.ts"],
      "@org/config": ["libs/config/src/index.ts"],
      "@org/core": ["libs/core/src/index.ts"],
      "@org/data-access-layer": ["libs/data-access-layer/src/index.ts"],
      "@org/environment": ["libs/environment/src/index.ts"],
      "@org/error-handlers": ["libs/error-handlers/src/index.ts"],
      "@org/package": ["package/src/index.ts"],
      "@org/shared-ui": ["libs/shared-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
